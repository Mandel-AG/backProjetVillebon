<html>
<head>
  <title>Mon title</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
  <button id='retour' class="btn btn-dark" type="button"> Retour </button> 
  <div class="container-fluid">
    <div class="d-flex flex-column align-items-center justify-content-center w-100" style="height:100vh;">
      <h1> Modifier Media </h1>

      <form class="d-flex flex-column card w-50" method="post" action="/medias/<%= media._id %>" >
        <div class="card-body">

            <div class="form-group">
              <label>Name</label>
              <input name="name" class="form-control" type="text" value="<%= media.name %>" />
              
            </div>

            <div class="form-group">
              <label>Equipe</label>
              <input name="equipe" class="form-control" value="<%= media.equipe %>" type="text" />
            </div>

            <div class="form-group">
              <label>Description</label>
              <input name="description" class="form-control" value="<%= media.description %>" type="text" />
            </div>

            <div class="form-group">
              <label>Chemin</label>
              <input name="chemin" class="form-control" type="text" />
            </div>

            <div class="form-group">
              <label>Postname</label>
              <input name="post" class="form-control" value="<%= media.post %>" type="text" />
            </div>

          
          <div>
            <input type="submit" value="Submit" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
  </div>
  <script type="text/javascript" src="/javascript/retour.js" ></script>
</body>
</html>