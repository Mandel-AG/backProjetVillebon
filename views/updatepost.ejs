<html>
<head>
  <title>Mon title</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
  <button id='retour' class="btn btn-dark" type="button"> Retour </button> 
  <div class="container-fluid">
    <div class="d-flex flex-column align-items-center justify-content-center w-100" style="height:100vh;">
      <h1> Modifier post </h1>

      <form class="d-flex flex-column card w-50" method="post" action="/posts/<%= post._id %>" >
        <div class="card-body">
            <div class="form-group">
              <label>Title</label>
              <input name="title" class="form-control" type="text" value="<%= post.title %>" />
            </div>

            <div class="form-group">
              <label>Description</label>
              <input name="description" class="form-control" value="<%= post.description %>" type="text" />
            </div>

            <div class="form-group">
              <label>Media</label>
              <input name="media" class="form-control"  />
            </div>

            <select class='btn btn-primary list-group mb-2' name="typePost">
              <option value="">--Please choose an option--</option>
              <option class='list-group-item text-body' value="equipe">Equipe</option>
              <option class='list-group-item text-body' value="actus">Actus/Events</option>
              <option class='list-group-item text-body' value="club">Club</option>
              <option class='list-group-item text-body' value="boutique">Boutique</option>

          </select>
          
          <div>
            <input type="submit" value="Submit" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
  </div>
  <script type="text/javascript" src="/javascript/retour.js" ></script>
</body>
</html>